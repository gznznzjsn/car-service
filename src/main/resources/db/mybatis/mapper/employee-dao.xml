<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.gznznzjsn.carservice.dao.EmployeeDao">
    <resultMap id="EmployeeResultMap" type="Employee" autoMapping="false">
        <id column="employee_id" property="id" jdbcType="BIGINT"/>
        <result column="specializations_value" property="specialization" jdbcType="VARCHAR"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
    </resultMap>
    <sql id="base_column_list">
        employee_id, name,value
    </sql>
    <insert id="create" keyProperty="id" keyColumn="employee_id" useGeneratedKeys="true">
        INSERT INTO employees (name, specialization_id)
        VALUES (#{name},
                (SELECT specialization_id FROM specializations WHERE value = #{specialization}));
    </insert>
    <select id="read" parameterType="Long" resultMap="EmployeeResultMap">
        SELECT
        <include refid="base_column_list"/>
        FROM employees
        JOIN specializations USING (specialization_id)
        WHERE employee_id=#{employeeId}
    </select>
    <select id="readAll" resultMap="EmployeeResultMap">
        SELECT
        <include refid="base_column_list"/>
        FROM employees
        JOIN specializations USING (specialization_id);
    </select>
    <delete id="delete" parameterType="Long">
        DELETE
        FROM employees
        WHERE employee_id = #{employeeId}
    </delete>
</mapper>