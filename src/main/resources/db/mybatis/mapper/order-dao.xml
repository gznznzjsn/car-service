<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.gznznzjsn.carservice.dao.OrderDao">
    <resultMap id="OrderResultMap" type="Order" autoMapping="false">
        <id column="order_id" property="id" jdbcType="BIGINT"/>
        <result column="status_value" property="status" jdbcType="VARCHAR"
                javaType="com.gznznzjsn.carservice.domain.carservice.order.OrderStatus"/>
        <result column="arrival_time" property="arrivalTime" jdbcType="TIMESTAMP"/>
        <result column="created_at" property="createdAt" jdbcType="TIMESTAMP"/>
        <result column="finished_at" property="finishedAt" jdbcType="TIMESTAMP"/>
        <association column="user_id" property="user" javaType="User" autoMapping="false">
            <id column="user_id" property="id" jdbcType="BIGINT"/>
            <result column="user_name" property="name" jdbcType="VARCHAR"/>
        </association>
    </resultMap>
    <insert id="create" keyProperty="id" keyColumn="order_id" useGeneratedKeys="true">
        INSERT INTO orders (status_id, arrival_time, created_at, user_id)
        VALUES ((SELECT status_id FROM statuses WHERE value = #{status}), #{arrivalTime}, now(), #{user.id});
    </insert>
    <select id="read" parameterType="Long" resultMap="OrderResultMap">
        SELECT order_id,
               statuses.value as status_value,
               arrival_time,
               created_at,
               finished_at,
               user_id,
               name           as user_name
        FROM orders
                 JOIN statuses USING (status_id)
                 JOIN users USING (user_id)
        WHERE order_id = #{orderId};
    </select>
    <update id="update">
                UPDATE orders
                SET status_id=(SELECT status_id FROM statuses WHERE value= #{status}),
                arrival_time= #{arrivalTime};
    </update>
</mapper>